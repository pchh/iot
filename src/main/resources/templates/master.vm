	    datasets: [{
	      label: "Revenue",
	      backgroundColor: "rgba(2,117,216,1)",
	      borderColor: "rgba(2,117,216,1)",
	      data: [
  	      #foreach ($item in $hashMapList)
		    $item.COUNT ,
		  #end
